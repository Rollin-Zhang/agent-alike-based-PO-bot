{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ticket Schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique ticket identifier"
    },
    "type": {
      "type": "string",
      "enum": ["DraftTicket", "FlowSelectionTicket", "ApprovalTicket"],
      "description": "Type of ticket"
    },
    "status": {
      "description": "Current status of the ticket (legacy + stage2 compat)",
      "oneOf": [
        {
          "type": "string",
          "enum": ["in_progress", "completed", "approved", "rejected"],
          "description": "Legacy-only statuses (pending/failed covered by stage2 enum)"
        },
        {
          "type": "string",
          "enum": ["pending", "running", "done", "failed", "blocked"],
          "description": "Stage 2 status machine"
        }
      ]
    },
    "flow_id": {
      "type": "string",
      "description": "Associated flow identifier"
    },
    "event": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "Event type (e.g., thread_reply, mention)"
        },
        "thread_id": {
          "type": "string",
          "description": "Thread identifier"
        },
        "content": {
          "type": "string",
          "description": "Event content"
        },
        "actor": {
          "type": "string",
          "description": "Actor who triggered the event"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Event timestamp"
        }
      },
      "required": ["type", "thread_id", "content", "actor", "timestamp"]
    },
    "draft": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string",
          "description": "Generated draft content"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence score for the draft"
        },
        "citations": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Source citations if applicable"
        },
        "model_info": {
          "type": "object",
          "properties": {
            "host": { "type": "string" },
            "provider": { "type": "string" },
            "model": { "type": "string" },
            "latency_ms": { "type": "number" },
            "prompt_tokens": { "type": "number" },
            "completion_tokens": { "type": "number" }
          },
          "additionalProperties": true,
          "description": "Model evidence for the draft"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "lease_expires": {
          "description": "When the ticket lease expires (legacy ISO date-time or stage2 epoch-ms)",
          "oneOf": [
            {
              "type": "string",
              "format": "date-time",
              "description": "Legacy ISO date-time"
            },
            {
              "type": "number",
              "description": "Stage 2 epoch milliseconds"
            }
          ]
        },
        "assigned_to": {
          "type": "string",
          "description": "Worker assigned to this ticket"
        },
        "kind": {
          "type": "string",
          "enum": ["TRIAGE", "REPLY", "TOOL"],
          "description": "Workflow stage marker (optional, for new three-phase flow)"
        },
        "tool_input": {
          "$ref": "#/definitions/ToolInput",
          "description": "Input configuration for TOOL ticket (only applicable when kind=TOOL)"
        },
        "final_outputs": {
          "type": "object",
          "properties": {
            "tool_context": {
              "$ref": "#/definitions/ToolContext",
              "description": "Evidence package from tool execution"
            },
            "tool_verdict": {
              "$ref": "#/definitions/ToolVerdict",
              "description": "Three-state decision from TOOL phase"
            }
          },
          "additionalProperties": true,
          "description": "Output container for TOOL ticket results"
        }
      },
      "additionalProperties": true
    }
  },
  "required": ["id", "type", "status", "event", "metadata"],
  "definitions": {
    "ToolInput": {
      "type": "object",
      "description": "Input configuration for TOOL ticket (all fields optional)",
      "properties": {
        "event": {
          "type": "object",
          "description": "Original event inherited from source TRIAGE ticket"
        },
        "triage": {
          "type": "object",
          "description": "Complete decision object from TRIAGE worker (includes decision/information_needs)"
        },
        "tool_steps": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ToolStep"
          },
          "description": "M2-B.1: Ordered list of tool execution steps (RunnerCore input)"
        },
        "tool_policy": {
          "type": "object",
          "properties": {
            "max_turns": {
              "type": "integer",
              "description": "Maximum tool interaction rounds"
            },
            "web_search_strategy": {
              "type": "string",
              "description": "Strategy for web search (e.g., focused, broad)"
            },
            "web_search_budget": {
              "type": "integer",
              "description": "Maximum number of web search queries"
            },
            "tool_whitelist": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Allowed tool names for this ticket"
            }
          },
          "additionalProperties": true,
          "description": "Tool invocation policy constraints"
        }
      },
      "additionalProperties": true
    },
    "ToolContext": {
      "type": "object",
      "description": "Evidence package from tool execution (all fields optional)",
      "properties": {
        "evidence": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "source": { "type": "string" },
              "snippet": { "type": "string" },
              "relevance_score": { "type": "number" }
            }
          },
          "description": "Collected evidence snippets"
        },
        "logs_hits": {
          "type": "array",
          "items": { "type": "object" },
          "description": "Log search results"
        },
        "graph_nodes": {
          "type": "array",
          "items": { "type": "object" },
          "description": "Knowledge graph query results"
        },
        "web_summaries": {
          "type": "array",
          "items": { "type": "object" },
          "description": "Web search summaries"
        },
        "tool_trace": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "tool_name": { "type": "string" },
              "args": { "type": "object" },
              "result": { "type": "object" },
              "timestamp": { "type": "string" }
            }
          },
          "description": "Audit trail of tool invocations"
        },
        "truncated": {
          "type": "boolean",
          "description": "Whether evidence was truncated due to budget limits"
        },
        "turn_control": {
          "type": "object",
          "properties": {
            "turns_used": { "type": "integer" },
            "max_turns": { "type": "integer" }
          },
          "description": "Tool interaction turn tracking"
        }
      },
      "additionalProperties": true
    },
    "ToolVerdict": {
      "description": "Three-state decision from TOOL phase",
      "oneOf": [
        {
          "type": "string",
          "enum": ["PROCEED", "DEFER", "BLOCK"],
          "description": "Legacy verdict string (Stage 2 compat)"
        },
        {
          "type": "object",
          "properties": {
            "status": {
              "type": "string",
              "enum": ["PROCEED", "DEFER", "BLOCK"],
              "description": "Decision status: PROCEED (continue to REPLY), DEFER (needs human review), BLOCK (reject)"
            },
            "reason": {
              "type": "string",
              "maxLength": 512,
              "description": "Explanation for the verdict decision"
            }
          },
          "required": ["status"],
          "additionalProperties": false
        }
      ]
    },
    "ToolStep": {
      "type": "object",
      "description": "M2-B.1: Single tool execution step (strict schema, no free-text)",
      "properties": {
        "tool_name": {
          "type": "string",
          "description": "Tool name (must be in allowlist: web_search, memory, filesystem)"
        },
        "args": {
          "type": "object",
          "description": "Tool-specific arguments (per-tool allowlist keys enforced by runtime validator)"
        },
        "budget": {
          "type": "object",
          "properties": {
            "max_steps": {
              "type": "integer",
              "minimum": 1,
              "description": "Maximum number of steps before BUDGET_EXCEEDED"
            },
            "max_wall_ms": {
              "type": "integer",
              "minimum": 1,
              "description": "Maximum wall clock time in milliseconds before RUN_TIMEOUT"
            }
          },
          "additionalProperties": false,
          "description": "Budget constraints (only max_steps/max_wall_ms; bytes limits handled by evidence policy)"
        },
        "save_as": {
          "type": "string",
          "description": "Optional evidence key for saving step output"
        }
      },
      "required": ["tool_name"],
      "additionalProperties": false
    }
  }
}