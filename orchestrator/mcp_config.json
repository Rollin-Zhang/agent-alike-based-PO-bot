{
  "mcp_servers": {
    "threads": {
      "endpoint": "http://localhost:3001/mcp",
      "description": "Threads provider for fetching thread content and posting replies",
      "tools": [
        "threads.fetch_thread",
        "threads.list_notifications",
        "threads.post_reply",
        "threads.get_thread_history"
      ],
      "rate_limits": {
        "requests_per_minute": 60,
        "burst": 10
      },
      "timeout": 30
    },

    "mem": {
      "endpoint": "http://localhost:3002/mcp",
      "description": "Memory service for semantic search and storage",
      "tools": [
        "mem.search",
        "mem.write",
        "mem.get",
        "mem.delete"
      ],
      "rate_limits": {
        "requests_per_minute": 100,
        "burst": 20
      },
      "timeout": 10
    },

    "guard": {
      "endpoint": "http://localhost:3003/mcp",
      "description": "Guardrails service for content safety and policy checking",
      "tools": [
        "guard.check_content",
        "guard.check_policy",
        "guard.classify_risk"
      ],
      "rate_limits": {
        "requests_per_minute": 200,
        "burst": 50
      },
      "timeout": 5
    },

    "reply": {
      "endpoint": "http://localhost:3004/mcp",
      "description": "Reply service for posting responses",
      "tools": [
        "reply.send",
        "reply.schedule",
        "reply.cancel"
      ],
      "rate_limits": {
        "requests_per_minute": 30,
        "burst": 5
      },
      "timeout": 15
    },

    "notebooklm": {
      "command": "node",
      "args": [
        "/Users/wangshihya/agent-alike_based_PO_bot/tools/notebooklm-mcp/dist/index.js"
      ],
      "description": "NotebookLM MCP (Local Fixed Version)",
      "tools": [
        "get_health",
        "setup_auth",
        "re_auth",
        "list_notebooks",
        "add_notebook",
        "select_notebook",
        "search_notebooks",
        "ask_question"
      ],
      "env": {
        "HEADLESS": "true"
      },
      "rate_limits": {
        "requests_per_minute": 10,
        "burst": 2
      },
      "timeout": 120,
      "optional": false
    },

    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory@2025.8.4"],
      "transport": "stdio",
      "env": { "MEMORY_FILE_PATH": "./data/knowledge_graph.json" },
      "description": "Official MCP memory server for knowledge graph operations",
      "tools": [
        "create_entities",
        "create_relations",
        "add_observations",
        "delete_entities",
        "delete_observations",
        "delete_relations",
        "read_graph",
        "search_nodes",
        "open_nodes"
      ],
      "rate_limits": {
        "requests_per_minute": 100,
        "burst": 20
      },
      "timeout": 30
    }
  },

  "tool_whitelist": [
    "threads.fetch_thread",
    "threads.list_notifications",
    "threads.post_reply",
    "threads.get_thread_history",

    "mem.search",
    "mem.write",
    "mem.get",
    "mem.delete",

    "guard.check_content",
    "guard.check_policy",
    "guard.classify_risk",

    "reply.send",
    "reply.schedule",
    "reply.cancel",

    "get_health",
    "setup_auth",
    "re_auth",
    "list_notebooks",
    "add_notebook",
    "select_notebook",
    "search_notebooks",
    "ask_question"
  ],

  "fallback_behavior": {
    "on_tool_unavailable": "skip_node",
    "on_server_timeout": "retry_once",
    "on_rate_limit": "queue_request"
  }
}