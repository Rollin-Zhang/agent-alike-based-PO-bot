{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "lease_debug_v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "ticket_id",
    "lease_token_hash",
    "lease_owner_expected",
    "lease_owner_provided"
  ],
  "properties": {
    "ticket_id": {
      "type": "string",
      "minLength": 1
    },
    "lease_token_hash": {
      "anyOf": [
        {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        {
          "type": "null"
        }
      ]
    },
    "lease_owner_expected": {
      "type": ["string", "null"]
    },
    "lease_owner_provided": {
      "type": ["string", "null"]
    }
  }
}
