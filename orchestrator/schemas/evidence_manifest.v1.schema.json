{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "evidence_manifest.v1.schema.json",
  "title": "Evidence Manifest v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["run_id", "as_of", "mode_snapshot_ref", "artifacts", "checks"],
  "properties": {
    "run_id": { "type": "string", "minLength": 8 },
    "as_of": { "type": "string", "format": "date-time" },
    "mode_snapshot_ref": { "type": "string", "minLength": 1 },
    "artifacts": {
      "type": "array",
      "items": { "$ref": "#/definitions/artifact" }
    },
    "checks": {
      "type": "array",
      "items": { "$ref": "#/definitions/check" }
    }
  },
  "definitions": {
    "artifact_kind": {
      "type": "string",
      "enum": [
        "run_report_v1",
        "evidence_manifest_v1",
        "dep_snapshot_v1",
        "startup_probe_report_v1",
        "lease_debug_v1",
        "tool_debug_v1",
        "readiness_debug_v1",
        "fill_response_v1",
        "ticket_terminal_v1",
        "manifest_self_hash_v1"
      ]
    },
    "sha256": {
      "anyOf": [
        { "type": "null" },
        { "type": "string", "pattern": "^[a-f0-9]{64}$" }
      ]
    },
    "artifact": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "path", "sha256", "bytes"],
      "properties": {
        "kind": { "$ref": "#/definitions/artifact_kind" },
        "path": { "type": "string", "minLength": 1 },
        "sha256": { "$ref": "#/definitions/sha256" },
        "bytes": { "type": "integer", "minimum": 0 }
      }
    },
    "check": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "ok", "reason_codes"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "ok": { "type": "boolean" },
        "reason_codes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "details_ref": { "type": "string", "minLength": 1 }
      }
    }
  }
}
